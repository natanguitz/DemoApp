@model DemoApp.web.Models.MyCart

    
<div class="container-fluid">
    <div class="col-md-12">
        <div class="row">
            <div class="well well-lg">
                <h3>Your selected items </h3>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    @foreach (var item in @Model.ComponentTypes)
                    {
                        <tr>
                            <td>@item.Name</td>
                        </tr>
                    }
                    
                    <tr>
                        <td></td>
                        <td></td>
                        <td>Your total price is Kr. @Model.PreviousCost</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>Total components selected : @Model.ComponentTypes.Count</td>
                    </tr>
                </table>

            </div>
        </div>
    </div>
</div>