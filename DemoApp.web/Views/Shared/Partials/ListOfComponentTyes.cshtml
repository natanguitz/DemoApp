@model IEnumerable<DemoApp.Domain.ComponentType>

    <div class="container">
        <h2></h2>
        <div class="row">
            <h3>Here are the available components for your package</h3>
            <hr/>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Manufacturer)</th>
                        <th>@Html.DisplayNameFor(model => model.DeliveryDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>Choose this </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Manufacturer</td>
                            <td>@item.DeliveryDate</td>
                            <td>Kr. @item.Price</td>
                            <td> @Html.RadioButton("choose this ", item.Id , new {id = item.Id}) </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>