@model IEnumerable<DemoApp.Domain.Package>

    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <h1>@item.Name</h1>
                </div>
                <div class="panel-footer">
                    <h3>Kr.  @item.InitialPrice</h3>
                    <h4>@item.Description</h4>
                    @Html.ActionLink("Let's start", "Create", "CreatePackage", new { id = item.Id }, new { @class = "btn btn-lg" })
                </div>
            </div>
        </div>
    }

